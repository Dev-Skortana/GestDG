<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestDG.Views.LoginPage" BackgroundColor="CadetBlue" xmlns:prism="http://prismlibrary.com"  
             prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="Connecter-vous pour pouvoir continuer" TextColor="Blue" TextDecorations="Underline"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Entry Text="{Binding Username}" TextColor="Blue" Placeholder="Votre nom d'utilisateur" PlaceholderColor="Blue" />
                <Entry Text="{Binding Password}" TextColor="Blue" Placeholder="Votre mot de passe" PlaceholderColor="Blue" IsPassword="True"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand">
                <Button Text="Se connecter" TextColor="Green" Clicked="Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>